{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,     "paths": {
        "~/*": ["./*"],
        "@/*": ["./*"]
      },
      "types": ["@types/node"]
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
  }